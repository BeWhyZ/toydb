!> UPDATE "float" SET id = 0.0
> UPDATE "float" SET id = -0.0
!> UPDATE "float" SET id = 1.23456789012345e308
> UPDATE "float" SET id = -1.23456789012345e308
!> UPDATE "float" SET id = INFINITY
> UPDATE "float" SET id = -INFINITY
!> UPDATE "float" SET id = NAN
!> UPDATE "float" SET id = NULL
